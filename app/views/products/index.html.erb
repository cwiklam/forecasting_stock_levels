<div class="container">
  <div class="row">
    <div class="col flex-right">
      <%= link_to 'Dodaj nowy', new_product_path, class: 'btn btn-secondary button-margin-vertical' %>
    </div>
  </div>
</div>
<div class="container flex-column-center">
  <table class="table table-dark table-striped">
    <thead>
    <tr class="table-dark">
      <th class="table-dark" scope="col">ID</th>
      <th class="table-dark" scope="col">Nazwa</th>
      <th class="table-dark" scope="col">Dostępność</th>
      <th class="table-dark" scope="col">Cena</th>
    </tr>
    </thead>
    <tbody>
    <% @products.each do |product| %>
      <tr class="table-dark">
        <th scope="row"><%= product.id %></th>
        <td class="table-dark"><%= product.name %></td>
        <td class="table-dark"><%= product.availability %></td>
        <td class="table-dark"><%= product.price %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>